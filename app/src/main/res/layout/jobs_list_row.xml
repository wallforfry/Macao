<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_margin="2dp"
    card_view:cardCornerRadius="4dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/job_layout_color">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Category du job"
            tools:background="@color/colorPrimary"
            android:textColor="@color/cardview_light_background"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/job_category"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Titre du job"
            tools:background="@color/colorPrimary"
            android:textColor="@color/cardview_light_background"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_below="@+id/job_category"
            android:id="@+id/job_title"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/job_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Text du job"
        android:layout_below="@+id/job_layout_color"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/job_layout_name"
        android:layout_below="@+id/job_content">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/job_image_name"
            android:layout_alignTop="@+id/job_name"
            android:src="@drawable/ic_person_black_24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:layout_toRightOf="@+id/job_image_name"
            android:layout_centerVertical="true"
            android:id="@+id/job_name"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/job_layout_name"
        android:id="@+id/job_layout_email">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/job_image_email"
            android:layout_alignTop="@+id/job_email"
            android:src="@drawable/ic_email_black_24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="email"
            android:layout_toRightOf="@+id/job_image_email"
            android:layout_centerVertical="true"
            android:id="@+id/job_email"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/job_layout_email"
        android:id="@+id/job_layout_telephone"
        android:paddingBottom="2dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/job_image_telephone"
            android:layout_alignTop="@+id/job_telephone"
            android:src="@drawable/ic_phone_black_24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="06666666666"
            android:textColor="#2196F3"
            android:layout_toRightOf="@+id/job_image_telephone"
            android:id="@+id/job_telephone"/>
    </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>